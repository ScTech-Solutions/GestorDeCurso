<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GestorDeCursos.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="8">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"></Label>
            </Frame>
            <Label Text="Email"/>
            <Entry Placeholder="example@gmail.com" x:Name="txtEmailReg" Keyboard="Email"/>
            <Label Text="Contraseña"/>
            <Entry Placeholder="********" x:Name="txtContraReg"/>
            <Label Text="Nombre Completo"/>
            <Entry Placeholder="Juan Perez" x:Name="txtNombreReg"/>
            <Label Text="Edad"/>
            <Entry Placeholder="45" x:Name="txtEdadReg" Keyboard="Numeric"/>

            <Button Text="Registrar" Clicked="Btn_Registrar"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>

